{
  "compilerOptions": {
    "target": "ES6",              // Compile down to ES6
    "module": "ESNext",           // Keep ES modules for Rollup to handle
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}